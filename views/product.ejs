<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.name %></title>
  <link rel="stylesheet" href="/styles/app.css">
</head>

<%- include("header"); -%>
<body>
  <div class="product-page">
    <div class="container flex" style="gap: 50px;">
      <div class="image">
        <img class="image" src="/<%= product.image %>" alt="<%= product.name %>">
      </div>
      <div class="flex" style="flex-direction: column; align-items: flex-end;">
        <div style="padding-right: 10px;">
          <h1><%= product.name %></h1>
          <h3>Price: ₪<%= product.price %></h3>
          <p><%= product.description %></p>
          <hr>
        </div>
        <div class="icons">
          <%-include ("productDetails")-%>
          <form action="/cart/add" method="POST">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="hidden" name="quantity" value="1">
            <button class="product-btn" type="submit">Add to Cart</button>
          </form>
          <form action="/cart/add" method="POST">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="hidden" name="quantity" value="1">
            <button class="product-btn" type="submit">Buy now</button>
          </form>
        </div>
      </div>
      
  </div>
  <div class="flex">
    <div>
      
    </div>
  </div>
    
<div>
  <h1 class="flex" style="margin-top: 100px;">מוצרים קשורים</h1>
  <div class="flex">
    <div style="margin: 50px;" class="flex">
        <% products.forEach((product) => { %>
            <div class="card">
                <a href="/product/<%= product.category %>/<%= product._id %>">
                  <img src="/<%= product.image %>" alt="<%= product.name %>">
                  <h3><%= product.name %></h3>
                </a>
                <p>Price: ₪<%= product.price %></p>
                  <form action="/cart/add" method="POST">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit">Add to Cart</button>
                  </form>
                  <form action="/cart/add" method="POST">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <input type="hidden" name="quantity" value="1">
                    <button style="margin-top: 10px;" type="submit">Buy now</button>
                  </form>
              </div>
        <% }) %>
    </div>    
</div>
</div>
<%- include('socials'); -%>
<%- include("footer"); -%>
</body>
</html>
