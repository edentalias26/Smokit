<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Smokit</title>
  <link rel="stylesheet" href="/styles/app.css">
  <link rel="stylesheet" href="styles/swiper-bundle.min.css" />
  <style>
    .swiper-container {
      width: 100%;
      height: auto;
    }

    .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 18px;
      background-color: #f4f4f4;
    }

    .product-card {
      text-align: center;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 5px;
      background-color: white;
    }

    .product-card img {
      max-width: 340px;
      height: auto;
    }
  </style>
</head>
<body>

  <%- include('header'); -%>
  <%- include("hero"); -%>
  
  <% productsGroupedByCategory.forEach(group => { %>
    <section>
      <a href="/category/<%= group.category %>">
        <h1 style="text-align: center; margin-top: 20px;"><%= group.category %></h1>
      </a>
        <div class="flex">
          <div class="swiper-container">
            <div class="swiper-wrapper">
              <% group.products.forEach(product => { %>
                <div class="swiper-slide">
                  <div class="card">
                    <a href="/product/<%= product.category %>/<%= product._id %>">
                      <img src="<%= product.image %>" alt="<%= product.name %>">
                      <h3><%= product.name %></h3>
                    </a>
                    <p>Price: â‚ª<%= product.price %></p>
                      <form action="/cart/add" method="POST">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit">Add to Cart</button>
                      </form>
                      <form action="/order" method="POST">
                        <input type="hidden" name="singleProductId" value="<%= product._id %>">
                        <input type="hidden" name="quantity" value="1">
                        <button style="margin-top: 10px;" type="submit">Buy now</button>
                      </form>
                  </div>
                </div>
            <% }) %>
            </div>
          </div>
            
        </div>
    </section>
<% }) %>

<div class="flex" style="align-items: center;">
  <div>
    <%- include("productDetails"); -%>
  </div>
  <div>
    <%- include('socials'); -%>
  </div>
</div>
<div class="flex">
    <div style=" border: 0.5px solid gray; border-radius: 10px; width: 350px; margin-top: 20px;">
        <img  style="width: 340px;" src="/images/download - 2024-08-19T185550.111.png" alt="">
    </div>
</div>
</div>
  <%- include("footer"); -%>
  <script src="/scripts/swiper-bundle.min.js"></script>
  <script>
    // Initialize Swiper
    var swiper = new Swiper('.swiper-container', {
      slidesPerView: 1, // Number of products shown at a time
      spaceBetween: 10, // Space between products
      loop: true, // Infinite loop
      autoplay: {
        delay: 3000, // Auto-slide every 3 seconds
        disableOnInteraction: false, // Keep auto-slide after user interaction
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        640: {
          slidesPerView: 1,
        },
        768: {
          slidesPerView: 2,
        },
        1024: {
          slidesPerView: 4,
        }
      },
      grabCursor: true, // Enable grab cursor
    });
  </script>
</body>
</html>
